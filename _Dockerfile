# Dockerfile
# build app1
FROM node:22-alpine AS builder
WORKDIR /app1

COPY package*.json ./
RUN npm install

COPY . .
RUN npm run build

# Serve with Nginx
FROM nginx:alpine
# COPY nginx.conf /etc/nginx/conf.d/default.conf
COPY app1.conf /etc/nginx/conf.d/app1.conf

# Copier chaque build dans des dossiers distincts
COPY --from=builder /app1/dist /usr/share/nginx/html/app1
